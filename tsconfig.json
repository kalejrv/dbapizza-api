{
  "compilerOptions": {
    "target": "ES2021",
    "outDir": "./dist", /* Output folder. */
    "rootDir": "./src", /* Input folder. */
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "baseUrl": "./src",
    "paths": {
      "@*": ["*"]
    },
    "typeRoots": ["@types", "./node_modules/@types"],
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
  },
}
